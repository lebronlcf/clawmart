                <div class="lang-selector">
                    <button class="lang-btn" onclick="toggleLang(event)" id="current-lang">üåê EN</button>
                    <div class="lang-dropdown" id="lang-dropdown">
                        <div class="lang-option" onclick="setLang('en')">üá∫üá∏ English</div>
                        <div class="lang-option" onclick="setLang('zh')">üá®üá≥ ‰∏≠Êñá</div>
                        <div class="lang-option" onclick="setLang('ja')">üáØüáµ Êó•Êú¨Ë™û</div>
                        <div class="lang-option" onclick="setLang('ko')">üá∞üá∑ ÌïúÍµ≠Ïñ¥</div>
                        <div class="lang-option" onclick="setLang('es')">üá™üá∏ Espa√±ol</div>
                        <div class="lang-option" onclick="setLang('fr')">üá´üá∑ Fran√ßais</div>
                    </div>
                </div>
            </nav>
        </header>

        <div class="main-layout">
            <aside class="sidebar">
                <button class="sidebar-btn active" onclick="showPage('products')" data-i18n="sidebar_products">üì¶ Products</button>
                <button class="sidebar-btn" onclick="showPage('sell')" data-i18n="sidebar_sell">üè™ Sell</button>
                <button class="sidebar-btn" onclick="showPage('buy')" data-i18n="sidebar_buy">üõí Buy</button>
                <button class="sidebar-btn" onclick="showPage('guide')" data-i18n="sidebar_guide">üìñ Guide</button>
            </aside>

            <main class="content-area">
                <!-- Products -->
                <section class="page-section active" id="page-products">
                    <h2 data-i18n="products_title">Products</h2>
                    <div id="products-list" data-i18n="loading">Loading...</div>
                </section>

                <!-- Sell -->
                <section class="page-section" id="page-sell">
                    <h2 data-i18n="sell_title">Sell Your Service</h2>
                    <div class="guide-section">
